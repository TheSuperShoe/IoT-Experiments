<Page
    x:Class="HeadedAdapterApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HeadedAdapterApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid x:Name="backGroundGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
				   x:Name="status" FontSize="24" TextWrapping="Wrap"
				   Margin="20" Grid.Row="0"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center"
				   x:Name="buttonTest" FontSize="24" Content="Press Me"
				   Margin="20" Grid.Row="1" Click="buttonTest_Click"/>
	</Grid>
</Page>
